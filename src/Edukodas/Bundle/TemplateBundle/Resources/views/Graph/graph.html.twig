{% extends "@EdukodasTemplate/base.html.twig" %}

{% block main %}
    <div class="container">
        <div class="row">
            {{ form_start(filterForm) }}
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s4">
                            {{ form_row(filterForm.timespan) }}
                        </div>
                        <div class="col s4">
                            {{ form_row(filterForm.team) }}
                        </div>
                        <div class="col s4">
                            {{ form_row(filterForm.class) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(filterForm) }}
        </div>

        {% if teamGraph %}
            <div class="row">
                <div class="col s12 m12">
                    <div class="card">
                        <div class="card-content">
                            <div class="row">
                                <div class="valign-wrapper">
                                    <div class="col s12 m6 l4">
                                        <canvas id="team-pie-chart"></canvas>
                                    </div>
                                    <div class="col s12 m6 l8">
                                        <canvas id="team-bar-chart"></canvas>
                                        {#<ul class="collection with-header">#}
                                            {#<li class="collection-header"><h4>{{ 'graph.heading'|trans }}</h4></li>#}
                                            {#{% for team in teamGraph.data  %}#}
                                                {#<li class="collection-item">#}
                                                    {#<span class="title"><b>{{ team.title }}</b></span>#}
                                                    {#<p>#}
                                                        {#{{ 'graph.teamGraph.point_list_entry'|trans({#}
                                                            {#'%amount%': team.amount,#}
                                                            {#'%rank%': loop.index#}
                                                        {#})|raw }}#}
                                                    {#</p>#}
                                                {#</li>#}
                                            {#{% endfor %}#}
                                        {#</ul>#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if teamLineGraph %}
            <div class="row">
                <div class="col s12 m12">
                    <div class="card">
                        <div class="card-content">
                            <div class="row">
                                <div class="valign-wrapper">

                                    <div class="col s12">
                                        <canvas id="team-line-chart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% if teamGraph %}
        <script>
            var data = {{ teamGraph.graphData|raw }};
            var options = {
                legend: {
                    display: false
                }
            };

            drawTeamPieChart(data, options);
            drawTeamBarChart(data, options);
        </script>
    {% endif %}

    {% if teamLineGraph %}
        <script>
            var data = {{ teamLineGraph|raw }};
            var options = {
                legend: {
                    display: false
                }
            };

            drawTeamLineChart(data, options);
        </script>
    {% endif %}
{% endblock %}
