{% if (user.hasPicture) %}
    <img class="circle responsive-img" src="{{ user|profile_pic|imagine_filter('profile_large') }}" alt="{{ user.fullName }}">
{% else %}
    <img class="circle responsive-img" src="{{ asset('/bundles/edukodastemplate/image/profile-placeholder.png')|imagine_filter('profile_large') }}" alt="{{ user.fullName }}">
{% endif %}
