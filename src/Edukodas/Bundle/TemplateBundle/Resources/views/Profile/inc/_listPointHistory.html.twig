<li class="collection-item avatar" id="history-points-{{ entryId }}">
    <i class="circle z-depth-1 white-text {% if amount < 0 %}red{% else %}green{% endif %}"
       style="font-style: normal;">{{ amount }}</i>
    <span class="title">
        {% if isStudentProfile %}
            <a class="light-blue-text text-darken-2" href="{{ path('edukodas_unified_profile', {'username' : teacher.username}) }}">{{ teacher.fullName }}</a>
        {% else %}
            <a class="light-blue-text text-darken-2" href="{{ path('edukodas_unified_profile', {'username' : student.username}) }}">{{ student.fullName }}</a>
        {% endif %}
    </span>
    <p>
        <i>{{ taskName }}</i>
    </p>
    <p>{{ comment }}</p>
    <span class="secondary-content grey-text">
        {{ createdAt|date('m/d H:m') }}
    </span>
    {% if is_granted('ROLE_TEACHER') %}
        {% if app.user.id == entryOwnerId %}
            <div class="secondary-content fab-align">
                <div class="fixed-action-btn horizontal click-to-toggle">
                    <a class="btn-floating btn-small light-blue darken-2">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul>
                        <li>
                            <a data-points-id="{{ entryId }}"
                               data-points-action="edukodas_points_edit"
                               class="btn-floating btn-small waves-effect waves-light light-blue darken-2"
                               href="#edit-points-modal">
                                <i class="small material-icons">mode_edit</i>
                            </a>
                        </li>
                        <li>
                            <a data-points-id="{{ entryId }}"
                               class="btn-floating btn-small waves-effect waves-light orange darken-4 delete-points"
                               href="#delete-points">
                                <i class="small material-icons">delete</i>
                            </a>
                            <div class="preloader-wrapper small active hide delete-points" id="delete-points-preload-{{ entryId }}">
                                <div class="spinner-layer spinner-red-only">
                                    <div class="circle-clipper left">
                                        <div class="circle"></div>
                                    </div>
                                    <div class="gap-patch">
                                        <div class="circle"></div>
                                    </div>
                                    <div class="circle-clipper right">
                                        <div class="circle"></div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        {% endif %}
    {% endif %}
</li>
