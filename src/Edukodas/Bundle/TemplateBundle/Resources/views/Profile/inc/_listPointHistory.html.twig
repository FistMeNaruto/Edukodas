<li class="collection-item avatar" id="history-points-{{ entryId }}">
    <i class="circle white-text {% if amount < 0 %}red{% else %}green{% endif %}"
       style="font-style: normal;">{{ amount }}</i>
    <span class="title">
        {% if isStudentProfile %}
            {{ teacher.fullName }}
        {% else %}
            {{ studentName }}
        {% endif %}
    </span>
    <p>
        <i>{{ taskName }}</i><br>
        {{ comment }}
    </p>

    {% if not is_granted('ROLE_TEACHER') %}
        <span class="secondary-content">
            {{ createdAtDate }}<br>
            {{ createdAtTime }}
        </span>
    {% else %}
        <div class="col s4 right-align">
            {{ createdAt }}<br>
            {{ comment }}
        </div>
        {% if app.user.id == entryOwnerId %}
            <div class="col s1 center-align valign">
                <a data-points-id="{{ entryId }}"
                   data-points-action="edukodas_points_edit"
                   class="btn-floating btn-small waves-effect waves-light red"
                   href="#edit-points-modal">
                    <i class="small material-icons">mode_edit</i>
                </a>
            </div>
            <div class="col s1 center-align valign">
                <a data-points-id="{{ entryId }}"
                   class="btn-floating btn-small waves-effect waves-light red delete-points"
                   href="#delete-points">
                    <i class="small material-icons">delete</i>
                </a>
                <div class="preloader-wrapper small active hide" id="delete-points-preload-{{ entryId }}">
                    <div class="spinner-layer spinner-red-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
</li>

