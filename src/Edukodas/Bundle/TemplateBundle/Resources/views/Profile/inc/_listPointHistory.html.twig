<li class="collection-item avatar" id="history-points-{{ entryId }}">
    <i class="circle white-text {% if amount < 0 %}red{% else %}green{% endif %}"
       style="font-style: normal;">{{ amount }}</i>
    <span class="title">
        {% if isStudentProfile %}
            <a href="{{ path('edukodas_teacher_profile', {'id' : teacher.id}) }}">{{ teacher.fullName }}</a>
        {% else %}
            <a href="{{ path('edukodas_student_profile', {'id' : student.id}) }}">{{ student.fullName }}</a>
        {% endif %}
    </span>
    <p>
        <i>{{ taskName }}</i><br>
        {{ comment }}
    </p>

    {% if not is_granted('ROLE_TEACHER') %}
        <span class="secondary-content grey-text">
            {{ createdAt|date('m/d') }}<br>
            {{ createdAt|date('H:m') }}
        </span>
    {% else %}
        <div class="secondary-content">
            {% if app.user.id == entryOwnerId %}
                <a data-points-id="{{ entryId }}"
                   data-points-action="edukodas_points_edit"
                   class="btn-floating btn-small waves-effect waves-light blue-grey lighten-1"
                   href="#edit-points-modal">
                    <i class="small material-icons">mode_edit</i>
                </a>
                <a data-points-id="{{ entryId }}"
                   class="btn-floating btn-small waves-effect waves-light blue-grey lighten-1 delete-points"
                   href="#delete-points">
                    <i class="small material-icons">delete</i>
                </a>
                <div class="preloader-wrapper small active hide" id="delete-points-preload-{{ entryId }}">
                    <div class="spinner-layer spinner-red-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="grey-text">
                {{ createdAt|date('m/d') }}<br>
                {{ createdAt|date('H:m') }}
            </div>
        </div>
    {% endif %}
</li>

