{% for team in teamList %}
    <li class="collection-item valign-wrapper">
        <div class="col s11 hide-on-med-and-up valign">
            {{ team.title }}
        </div>

        <div class="col s1 hide-on-small-only valign">
            {{ team.title }}
        </div>

        <div class="col s10 hide-on-small-only valign">
            {% set maxAmount = teamList|first.amount %}
            {% set minAmount = teamList|last.amount %}

            {% set minMaxAmount = minAmount|abs + maxAmount|abs %}
            {% set teamAmount = team.amount + minAmount|abs %}

            {% if minMaxAmount == 0 %}
                {% set percent = 100 %}
            {% else %}
                {% set percent = teamAmount / minMaxAmount * 100 %}
            {% endif %}

            <div style="width: {{ percent }}%; height: 10px;"
                 class="{{ team.color }} lighten-1"></div>
        </div>

        <div class="s1 valign {{ team.amount <= 0 ? 'red-text text-lighten-1' : 'grey-text'}}">
            {{ team.amount }}
        </div>
    </li>
{% else %}
    {{ 'user_list.no_users'|trans }}
{% endfor %}
