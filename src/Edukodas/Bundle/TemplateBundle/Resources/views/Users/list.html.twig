{% extends "EdukodasTemplateBundle::base.html.twig" %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="input-field col s2">
                <select id="select-team">
                    <option value="" selected>{{  'user_list.all'|trans }}</option>
                    {% for team in teamList %}
                        <option value="{{ team.id }}">{{ team.title }}</option>
                    {% endfor %}
                </select>
                <label>{{ 'user_list.team'|trans }}</label>
            </div>

            <div class="input-field col s2">
                <select id="select-class">
                    <option value="" selected>{{ 'user_list.all'|trans }}</option>
                    {% for class in classList %}
                        <option value="{{ class.id }}">{{ class.title }}</option>
                    {% endfor %}
                </select>
                <label>{{ 'user_list.class'|trans }}</label>
            </div>
        </div>

        <div class="row" id="user-list">
            {% include "@EdukodasTemplate/Users/inc/_listUsers.html.twig" with {
                userList: userList
            } %}
        </div>
    </div>
{% endblock %}
